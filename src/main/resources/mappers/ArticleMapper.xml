<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmblog.core.dao.ArticleDao">

    <!--结果集-->
    <resultMap id="ArticleResult" type="Article">
        <result property="id" column="id"/>
        <result property="articleTitle" column="article_title"/>
        <result property="articleCreateDate" column="article_create_date"/>
        <result property="articleContent" column="article_column"/>
        <result property="isTop" column="is_top"/>
        <result property="addName" column="add_name"/>
    </resultMap>

    <select id="findArticles" parameterType="Map" resultMap="ArticleResult">
      select id,article_title,article_create_date,article_column,is_top,add_name from ssm_article
      <where>
          <if test="articleTitle!=null and articleTitle!=''">
              and article_title like #{articleTitle}
          </if>
      </where>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>


</mapper>